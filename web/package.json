  "license": "AGPL-3.0-or-later",
  "private": true,
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc --project src/tsconfig.json && vite build",
    "lint": "tslint --project src/tsconfig.json",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' TS_NODE_PROJECT='test/tsconfig.json' mocha -r ts-node/register test/**/*.spec.ts",
    "serve": "vite preview",
    "dist": "tsc --project src/tsconfig.json && vite build --outDir='../spi/src/main/resources/META-INF/resources' --emptyOutDir"
  },
  "directories": {
    "src": "./src",
    "test": "./test"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.4.10",
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "ts-node": "^10.1.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3.5",
    "vite": "^2.4.4"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "keycloak-js": "^15.0.0"
  }
